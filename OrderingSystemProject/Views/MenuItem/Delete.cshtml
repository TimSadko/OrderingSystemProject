@model OrderingSystemProject.Models.MenuItem
@{
	ViewData["Title"] = "Delete Menu Item";
}
@{
    var euroCulture = (System.Globalization.CultureInfo)System.Globalization.CultureInfo.InvariantCulture.Clone();
    euroCulture.NumberFormat.CurrencySymbol = "€";
    euroCulture.NumberFormat.CurrencyDecimalSeparator = ".";
    euroCulture.NumberFormat.CurrencyGroupSeparator = ",";
}
<div class="text-center container-background">
    <h4>Delete Menu Item</h4>

    <partial name="_ErrorMessage" />

    <form action="/MenuItem/Delete" method="post">
        <input hidden type="number" name="ItemId" value="@Model?.MenuItemId"/>
        <div class="form-group py-2 text-start">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" class="form-control" readonly value="@Model?.Name"/>
        </div>
        <div class="form-group py-2 text-start">
            <label for="Price">Price:</label>
            <input type="text" id="Price" name="Price" class="form-control" readonly value="@Model?.Price"/>
        </div>
        <div class="form-group py-2 text-start">
            <label for="Card">Card:</label>
            <input type="text" id="Card" name="Card" class="form-control" readonly value="@Model?.Card"/>
        </div>
        <div class="form-group py-2 text-start">
            <label for="Category">Category:</label>
            <input type="text" id="Category" name="Category" class="form-control" readonly value="@Model?.Category"/>
        </div>
        <div class="form-group py-2 text-start">
            <label for="Stock">Stock:</label>
            <input type="number" id="Stock" name="Stock" class="form-control" readonly value="@Model?.Stock"/>
        </div>
        <div class="form-group py-2 text-start">
            <label for="IsActive">Is Active:</label>
            @{
                String status = "Deactivated";
                if (Model is { IsActive: true })
                {
                    status = "Activated";
                }
                <input type="text" id="IsActive" name="IsActive" class="form-control" readonly value="@status"/>
            }
        </div>
        <button type="submit" class="primary-button">Delete</button>
    </form>
    <a href="/MenuItem/Index">Back to List</a>
</div>
