@model List<OrderingSystemProject.Models.Table>

@{
    ViewData["Title"] = "Restaurant Overview";
    var orderStatuses = ViewData["OrderStatuses"] as List<OrderingSystemProject.Models.TableOrderInfo>;
}

<h4 class="text-center mb-4">Restaurant Overview</h4>

<!-- Display error message -->
<partial name="_ErrorMessage"/>

<!-- Display success message -->
<partial name="_SuccessMessage"/>

<!-- Refresh overview -->
<div class="mb-4">
    <a asp-controller="Restaurant" asp-action="RefreshOverview" class="btn btn-primary">Refresh Tables</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (Table table in Model)
    {
        string cardColorClass;
        string statusText;
        
        if (table.Status == (int)TableStatus.Available)
        {
            cardColorClass = "success";
            statusText = "Available";
        }
        else if (table.Status == (int)TableStatus.Occupied)
        {
            cardColorClass = "danger";
            statusText = "Occupied";
        }
        else
        {
            cardColorClass = "secondary";
            statusText = "Unknown";
        }

        <div class="col px-1"> 
            <div class="card m-1" style="width: 100%;">
                <div class="card-header text-center">Table @table.TableId</div>
                <div class="card-body bg-@cardColorClass text-white" style="height: 100px;">
                    <p class="card-text text-center">@statusText</p>
                    @if (orderStatuses != null)
                    {
                        foreach (var order in orderStatuses)
                        {
                            if (order.TableId == table.TableId)
                            {
                                if (order.Card == ItemCard.DRINKS)
                                {
                                    <div>Drinks: @order.OrderStatus</div>
                                }
                                else
                                {
                                    <div>Food: @order.OrderStatus</div>
                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>