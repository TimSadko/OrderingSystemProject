@model OrderingSystemProject.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<!-- Display error message -->
<partial name="_ErrorMessage" />

<div class="d-flex justify-content-center mt-5">
    <form action="/Employees/Login" method="post" class="p-4 border rounded shadow-sm" style="width: 300px;">
        <div class="form-group py-2">
            <label for="UserName">Login:</label> 
            <input type="text" id="UserName" name="UserName" class="form-control form-control-sm" required value="@Model?.UserName"/>
        </div>

        <div class="form-group py-2">
            <label for="Password">Password:</label> 
            <input type="password" id="Password" name="Password" class="form-control form-control-sm" required value="@Model?.Password"/>
        </div>

        <button type="submit" class="btn btn-login w-100 mt-3">Login</button>
    </form>
</div>