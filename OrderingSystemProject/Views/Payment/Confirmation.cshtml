@model Payment

<h2>✅ Thank you for your payment!</h2>

<p><strong>Paid:</strong> €@Model.PaymentAmount (Tip: €@Model.TipAmount)</p>
<p><strong>Method:</strong> @Model.PaymentType</p>

@if (!string.IsNullOrWhiteSpace(Model.Feedback))
{
    <p><strong>Your Feedback:</strong> @Model.Feedback</p>
}

<a href="/Restaurant/Overview" class="btn btn-primary mt-3">Back to Home</a>