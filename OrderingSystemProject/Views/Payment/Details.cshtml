@model OrderingSystemProject.Models.DisplayOrderViewModel

<h2>Order Bill</h2>

@if (Model.Order != null)
{
    <p><strong>Order ID:</strong> @Model.Order.OrderId</p>
    <p><strong>Table:</strong> @Model.Order.TableId</p>
    <p><strong>Order Time:</strong> @Model.Order.OrderTime</p>
}
else
{
    <p class="text-danger">Order not found.</p>
}

<hr class="my-4" />

<h3 class="mb-3">Order Items</h3>

@if (Model.OrderLines != null && Model.OrderLines.Any())
{
    <table class="table table-bordered">
        <thead class="table-light">
        <tr>
            <th>Item Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Comment</th>
            <th>Line Total</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.OrderLines)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.Comment</td>
                <td>@item.LineTotal.ToString("C")</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr class="table-secondary">
            <td colspan="4" class="text-end fw-bold">Total:</td>
            <td class="fw-bold">@Model.OrderTotal.ToString("C")</td>
        </tr>
        </tfoot>
    </table>
}
else
{
    <p>No items in this order.</p>
}