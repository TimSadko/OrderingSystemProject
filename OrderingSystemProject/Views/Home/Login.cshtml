@model OrderingSystemProject.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>

<form action="Login" method="post">
	@{
		if (ViewData["Exception"] != null)
		{
			<div class="border-danger text-danger alert-danger">Failed to log in, wrong password or login</div>
		}
	}

	<div class="form-group py-2">
		<label for="Login">Login:</label>
		<input type="text" id="Login" name="Login" class="form-control" required value="@Model?.Login" />
	</div>

	<div class="form-group py-2">
		<label for="Password">Password:</label>
		<input type="password" id="Password" name="Password" class="form-control" required value="@Model?.Password" />
	</div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
